{
  "image": "mcr.microsoft.com/devcontainers/rust",
  "remoteUser": "root",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "github.copilot",
        "github.vscode-github-actions",
        "gruntfuggly.todo-tree",
        "jock.svg",
        "pkief.material-icon-theme",
        "swellaby.vscode-rust-test-adapter",
        "tamasfe.even-better-toml",
        "usernamehw.errorlens",
        "vsls-contrib.gistfs"
      ]
    }
  },
  "onCreateCommand": {
    "1-install-system-deps": "sudo apt update -y && sudo apt install -y clang",
    "2-install-surrealdb": "curl -sSf https://install.surrealdb.com | sh",
    "3-create-db-dir": "mkdir -p /var/lib/surrealdb",
    "4-create-startup-script": "echo '#!/bin/bash\\nsurreal start --username root --password root --bind 0.0.0.0:8000 --log debug file:///var/lib/surrealdb/database.db &' > /usr/local/bin/start-surrealdb && chmod +x /usr/local/bin/start-surrealdb"
  },
  "postStartCommand": "start-surrealdb",
  "shutdownAction": "stopContainer"
}
